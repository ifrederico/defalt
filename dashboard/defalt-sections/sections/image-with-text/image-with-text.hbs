{{!-- Image With Text Section --}}
<style>
  .gd-image-text-section {
    --content-width: {{contentWidth}};
    width: 100%;
    max-width: var(--content-width);
    margin: 0 auto;
    padding: 0 {{#if (eq contentWidth 'none')}}0{{else}}var(--container-gap, 24px){{/if}};
  }

  .gd-image-text-container {
    width: 100%;
    margin: 0 auto;
  }

  .gd-image-text-content {
    display: grid;
    grid-template-columns:
      {{#if (eq imageWidth '2/3')}}2fr 1fr{{else}}{{#if (eq imageWidth '3/4')}}3fr 1fr{{else}}1fr 1fr{{/if}}{{/if}};
    gap: clamp(32px, 5vw, 64px);
    align-items: center;
  }

	  .gd-image-text-content.gd-image-text-image-right {
	    grid-template-columns:
	      {{#if (eq imageWidth '2/3')}}1fr 2fr{{else}}{{#if (eq imageWidth '3/4')}}1fr 3fr{{else}}1fr 1fr{{/if}}{{/if}};
	  }

	  .gd-image-text-content.gd-image-text-image-right .gd-image-text-image {
	    order: 2;
	  }

	  .gd-image-text-content.gd-image-text-image-right .gd-image-text-text {
	    order: 1;
	  }

	  @media (max-width: 768px) {
	    .gd-image-text-content,
	    .gd-image-text-content.gd-image-text-image-right {
	      grid-template-columns: 1fr;
	    }

	    /* Always keep image above text on mobile */
	    .gd-image-text-content.gd-image-text-image-right .gd-image-text-image,
	    .gd-image-text-content.gd-image-text-image-right .gd-image-text-text {
	      order: 0;
	    }
	  }

  .gd-image-text-image {
    width: 100%;
    aspect-ratio:
      {{#if (eq imageAspect 'square')}}1 / 1{{else}}{{#if (eq imageAspect 'portrait')}}3 / 4{{else}}{{#if (eq imageAspect 'wide')}}16 / 9{{else}}{{#if (eq imageAspect 'tall')}}9 / 16{{else}}{{#if (eq imageAspect 'landscape')}}4 / 3{{else}}auto{{/if}}{{/if}}{{/if}}{{/if}}{{/if}};
    border-radius: {{imageBorderRadius}}px;
    overflow: hidden;
    background-color: rgba(0, 0, 0, 0.05);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .gd-image-text-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .gd-image-text-placeholder {
    opacity: 0.65;
    font-size: 3rem;
  }

  .gd-image-text-text {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .gd-image-text-heading {
    margin: 0;
    font-family: var(--gh-font-heading, var(--font-sans));
    font-size: clamp(2.8rem, 1.36vw + 2.25rem, 4rem);
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1.1;
    color: inherit;
  }

  .gd-image-text-description {
    margin: 0;
    font-size: 1.8rem;
    line-height: 1.4;
    letter-spacing: -0.015em;
    opacity: 0.85;
    color: inherit;
  }

  .gd-image-text-align-left .gd-image-text-text {
    text-align: left;
    align-items: flex-start;
  }

  .gd-image-text-align-center .gd-image-text-text {
    text-align: center;
    align-items: center;
  }

  .gd-image-text-align-right .gd-image-text-text {
    text-align: right;
    align-items: flex-end;
  }
</style>

<section
  class="gd-image-text-section gd-image-text-align-{{textAlignment}}"
  style="{{sectionStyle}}"
  data-section-id="{{sectionId}}"
>
  <div class="gd-image-text-container">
    <div class="gd-image-text-content{{#if (or invert (eq imagePosition 'right'))}} gd-image-text-image-right{{/if}}">
	      <div class="gd-image-text-image">
	        {{#if pages.[0].feature_image}}
	          <img src="{{pages.[0].feature_image}}" alt="{{pages.[0].title}}" />
	        {{else}}
	          <img src="/sections/placeholder.jpg" alt="Placeholder" />
	        {{/if}}
	      </div>
      <div class="gd-image-text-text">
        {{#if pageTitle}}
          <h2 class="gd-image-text-heading">
            {{#if pages.[0].title}}{{pages.[0].title}}{{else}}Page title{{/if}}
          </h2>
        {{/if}}
        <p class="gd-image-text-description">
          {{#if pages.[0].custom_excerpt}}
            {{pages.[0].custom_excerpt}}
          {{else}}
            {{#if pages.[0].excerpt}}
              {{pages.[0].excerpt}}
            {{else}}
              Tag a page with <code>{{tag}}</code> to display content here.
            {{/if}}
          {{/if}}
        </p>
      </div>
    </div>
  </div>
</section>
