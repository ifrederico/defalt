{{!-- Hero Split Section --}}
<style>
  .gd-hero-section {
    --content-width: {{contentWidth}};
    width: 100%;
    max-width: var(--content-width);
    margin: 0 auto;
    padding: 0 {{#if (eq contentWidth 'none')}}0{{else}}var(--container-gap, 24px){{/if}};
  }

  .gd-hero-container {
    width: 100%;
    margin: 0 auto;
  }

  .gd-hero-content {
    display: grid;
    grid-template-columns:
      {{#if (eq imageWidth '2/3')}}1fr 2fr{{else}}{{#if (eq imageWidth '3/4')}}1fr 3fr{{else}}1fr 1fr{{/if}}{{/if}};
    gap: clamp(32px, 5vw, 64px);
    align-items: center;
  }

  .gd-hero-content.gd-hero-image-right {
    grid-template-columns:
      {{#if (eq imageWidth '2/3')}}2fr 1fr{{else}}{{#if (eq imageWidth '3/4')}}3fr 1fr{{else}}1fr 1fr{{/if}}{{/if}};
  }

  .gd-hero-content.gd-hero-image-right .gd-hero-image {
    order: 2;
  }

  .gd-hero-content.gd-hero-image-right .gd-hero-text {
    order: 1;
  }

  @media (max-width: 768px) {
    .gd-hero-content,
    .gd-hero-content.gd-hero-image-right {
      grid-template-columns: 1fr;
    }

    .gd-hero-content.gd-hero-image-right .gd-hero-image,
    .gd-hero-content.gd-hero-image-right .gd-hero-text {
      order: 0;
    }
  }

  .gd-hero-image {
    width: 100%;
    aspect-ratio:
      {{#if (eq imageAspect 'square')}}1 / 1{{else}}{{#if (eq imageAspect 'portrait')}}3 / 4{{else}}{{#if (eq imageAspect 'wide')}}16 / 9{{else}}{{#if (eq imageAspect 'tall')}}9 / 16{{else}}{{#if (eq imageAspect 'landscape')}}4 / 3{{else}}auto{{/if}}{{/if}}{{/if}}{{/if}}{{/if}};
    border-radius: {{imageBorderRadius}}px;
    overflow: hidden;
    background-color: rgba(0, 0, 0, 0.05);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .gd-hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .gd-hero-placeholder {
    opacity: 0.65;
    font-size: 3rem;
  }

  .gd-hero-text {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .gd-hero-heading {
    margin: 0;
    font-family: var(--gh-font-heading, var(--font-sans));
    font-size: clamp(3.2rem, 2vw + 2.5rem, 4.8rem);
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1.1;
    color: inherit;
  }

  .gd-hero-description {
    margin: 0;
    font-size: 1.8rem;
    line-height: 1.5;
    letter-spacing: -0.015em;
    opacity: 0.85;
    color: inherit;
  }

  .gd-hero-ctas {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1.5rem;
    margin-top: 8px;
  }

  .gd-hero-ctas .kg-btn {
    display: inline-block;
    padding: 0.6em 1.2em;
    border-radius: 4px;
    font-size: 1em;
    line-height: 1.2em;
    font-weight: 600;
    text-decoration: none;
  }

  .gd-hero-ctas .kg-btn-accent {
    background-color: var(--ghost-accent-color);
    color: #fff;
  }

  .gd-hero-align-left .gd-hero-text {
    text-align: left;
    align-items: flex-start;
  }

  .gd-hero-align-center .gd-hero-text {
    text-align: center;
    align-items: center;
  }

  .gd-hero-align-right .gd-hero-text {
    text-align: right;
    align-items: flex-end;
  }
</style>

<section
  class="gd-hero-section gd-hero-align-{{textAlignment}}"
  style="{{sectionStyle}}{{#if backgroundColor}}{{#unless (eq backgroundColor 'transparent')}}background-color: {{backgroundColor}};{{/unless}}{{/if}}"
  data-section-id="{{sectionId}}"
>
  <div class="gd-hero-container">
    <div class="gd-hero-content{{#if (or invert (eq imagePosition 'right'))}} gd-hero-image-right{{/if}}">
      <div class="gd-hero-image">
        {{#if pages.[0].feature_image}}
          <img src="{{pages.[0].feature_image}}" alt="{{pages.[0].title}}" />
        {{else}}
          <img src="/sections/placeholder.jpg" alt="Placeholder" />
        {{/if}}
      </div>
      <div class="gd-hero-text">
        {{#if pageTitle}}
          <h1 class="gd-hero-heading">
            {{#if pages.[0].title}}{{pages.[0].title}}{{else}}Page title{{/if}}
          </h1>
        {{/if}}
        <p class="gd-hero-description">
          {{#if pages.[0].custom_excerpt}}
            {{pages.[0].custom_excerpt}}
          {{else}}
            {{#if pages.[0].excerpt}}
              {{pages.[0].excerpt}}
            {{else}}
              Tag a page with <code>{{tag}}</code> to display content here.
            {{/if}}
          {{/if}}
        </p>
        {{#if pages.[0].html}}
          <div class="gd-hero-ctas">
            {{{pages.[0].html}}}
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</section>
