{{!-- Ghost Cards Section - Source Template
     This is a placeholder that gets replaced by engine-rendered content in preview.
     During export, Defalt Theme Editor prepends styles with user config values. --}}

{{#get "pages" filter="tag:hash-cards-hide+tag:hash-ghost-card" limit="1"}}
    {{#if pages}}
        {{!-- Section intentionally hidden via #cards-hide --}}
    {{else}}
        {{#get "pages" filter="tag:hash-ghost-card" limit="3" include="tags"}}
            <section class="gd-ghost-cards-section gh-outer{{!-- defalt-ghost-cards-section-classes --}}" data-section-type="ghost-cards">
                <div class="gh-inner">
                    <div class="gd-ghost-cards-inner">
                        {{#if pages}}
                            {{#foreach pages}}
                                <article class="gh-article">
                                    <header class="gh-defalt-article-header">
                                        <h1 class="gh-article-title is-title">{{title}}</h1>
                                        {{#if custom_excerpt}}
                                            <p class="gh-article-excerpt is-body">{{custom_excerpt}}</p>
                                        {{/if}}
                                    </header>
                                    <div class="gh-content is-body">
                                        {{{html}}}
                                    </div>
                                </article>
                            {{/foreach}}
                        {{else}}
                            <header class="gd-ghost-placeholder-header">
                                <h1 class="gh-article-title is-title">Page title</h1>
                            </header>
                            <div class="gd-ghost-cards-placeholder" role="status" aria-live="polite">
                                <p class="gd-ghost-cards-placeholder-title">Waiting for tagged pages</p>
                                <p class="gd-ghost-cards-placeholder-copy">
                                    Add the tag <code>#ghost-card</code> to a published page. To hide this section, add <code>#cards-hide</code> to that same page.
                                </p>
                            </div>
                        {{/if}}
                    </div>
                </div>
            </section>
        {{/get}}
    {{/if}}
{{/get}}
