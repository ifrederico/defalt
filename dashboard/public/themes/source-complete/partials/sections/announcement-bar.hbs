{{!-- Announcement Bar - Source Template
     This is a placeholder that gets replaced by engine-rendered content in preview.
     During export, Defalt Theme Editor generates the full template with user config values.

     Note: No <style> block here - the engine provides styles with user's custom values. --}}

{{#get "pages" filter="tag:hash-announcement-bar" limit="1" include="tags" as |announcementPages|}}
    {{#if announcementPages.[0]}}
        <section class="announcement-bar" id="announcement" role="status" aria-live="polite">
            <div class="announcement-bar__text" aria-label="Announcement">
                <div class="announcement-bar__copy announcement-bar__copy--rich">
                    {{{announcementPages.[0].html}}}
                </div>
            </div>
        </section>
    {{/if}}
{{else}}
    {{!-- Preview placeholder - replaced by engine-rendered content --}}
    <section class="announcement-bar" id="announcement" role="status" aria-live="polite">
        <div class="announcement-bar__text" aria-label="Announcement preview">
            <div class="announcement-bar__copy announcement-bar__preview-copy">
                Tag #announcement-bar to a published Ghost page.
            </div>
        </div>
    </section>
{{/get}}
