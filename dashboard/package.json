{
  "name": "ghost-theme-editor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx watch server.ts",
    "build": "tsc -b && vite build",
    "build:theme": "bun install --frozen-lockfile --cwd public/themes/source-complete && bun run --cwd public/themes/source-complete zip",
    "build:all": "bun run build && bun run build:theme",
    "start": "tsx server.ts",
    "lint": "eslint .",
    "test": "vitest run",
    "preview": "vite preview"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-json": "^6.0.2",
    "@dnd-kit/helpers": "^0.1.21",
    "@dnd-kit/react": "^0.1.21",
    "@floating-ui/react": "^0.27.16",
    "@fontsource/inter": "^5.2.8",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.0",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-toggle-group": "^1.0.7",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tryghost/content-api": "^1.12.2",
    "@uiw/react-codemirror": "^4.25.2",
    "archiver": "^7.0.1",
    "css-tree": "^3.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "handlebars": "^4.7.8",
    "lucide-react": "^0.548.0",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-colorful": "^5.6.1",
    "react-dom": "^19.1.1",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.5.2",
    "tsx": "^4.19.0",
    "use-debounce": "^10.0.6",
    "zod": "^4.1.12",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/react": "^16.3.0",
