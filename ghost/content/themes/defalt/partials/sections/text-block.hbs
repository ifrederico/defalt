{{!--
    Text Block Section - Full-width section with text content

    Parameters:
    - filter (required): NQL filter for pages (e.g., "tag:hash-text-block")

    CONFIGURATION: Edit the CSS variables and classes below to customize
--}}


<style>
/* Text Block Section - Inline Styles */
.gd-text-block-section {
    /* CONFIGURATION: Width control
       Options: 720px (narrow), 960px (medium), 1120px (default) */
    --section-width: 1120px;

    /* CONFIGURATION: Heading size - Add a class to the h2 below
       Options: heading-sm, heading-md (default), heading-lg, heading-xl */

    /* Spacing configuration */
    --section-padding-top: 80px;
    --section-padding-bottom: 80px;

    padding-top: var(--section-padding-top);
    padding-bottom: var(--section-padding-bottom);
}

.gd-text-block-section .gh-inner {
    max-width: var(--section-width);
}

.gd-text-block-label {
    margin-bottom: 16px;
    font-size: 1.2rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--color-secondary-text);
}

.gd-text-block-title {
    font-size: calc(clamp(2.8rem, 1.36vw + 2.25rem, 4rem) * var(--factor, 1));
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: -0.02em;
    margin-bottom: 24px;
}

.gd-text-block-section .gh-content {
    font-size: 1.8rem;
    line-height: 1.6;
}

.gd-text-block-section .gh-content p + p {
    margin-top: 20px;
}
</style>

{{#get "pages" filter=filter}}
  {{#if pages}}
    <section class="gd-text-block-section gh-outer">
      <div class="gh-inner">
        {{#foreach pages}}
          <div class="gd-text-block-content">
            {{#if custom_excerpt}}
              <p class="gd-text-block-label">{{custom_excerpt}}</p>
            {{/if}}
            <h2 class="gd-text-block-title is-title heading-lg">{{title}}</h2>
            <div class="gh-content is-body">
              {{content}}
            </div>
          </div>
        {{/foreach}}
      </div>
    </section>
  {{/if}}
{{/get}}
