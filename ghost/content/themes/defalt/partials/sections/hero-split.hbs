{{!--
    Hero Split Section - Hero with text/CTAs on left, image with shadow on right

    Parameters:
    - filter (required): NQL filter for pages (e.g., "tag:hash-hero-split")

    Ghost page setup:
    - Title: headline text
    - Excerpt: description text
    - Content: CTA buttons (use Ghost's button card)
    - Feature image: product screenshot
    - Tag: #hash-hero-split
--}}

<style>
.gd-hero-split-section {
    --section-width: var(--container-width, 1320px);
    --section-padding-top: max(4vw, 40px);
    --section-padding-bottom: 64px;
    --gap: 48px;

    padding-top: var(--section-padding-top);
    padding-bottom: var(--section-padding-bottom);
}

.gd-hero-split-section .gh-inner {
    max-width: var(--section-width);
}

.gd-hero-split-content {
    display: flex;
    flex-direction: row;
    gap: var(--gap);
    align-items: center;
}

.gd-hero-split-text {
    flex: 1;
}

.gd-hero-split-text h1 {
    font-size: clamp(3.2rem, 5vw, 4.9rem);
    line-height: 1.15;
    margin: 0 0 40px;
}

.gd-hero-split-text .gd-hero-split-excerpt {
    font-size: 1.8rem;
    line-height: 1.5;
    margin: 0 0 40px;
}

.gd-hero-split-ctas {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
}

/* HTML card approach for CTAs */
.hero-ctas {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 3rem;
}

.hero-ctas .kg-btn {
    display: inline-block;
    padding: .6em 1.2em;
    border-radius: 4px;
    font-size: 1em;
    line-height: 1.2em;
    font-weight: 600;
    text-decoration: none;
}

.hero-ctas .kg-btn-accent {
    background-color: var(--ghost-accent-color);
    color: #fff;
}

.gd-hero-split-image {
    flex: 1;
}

.gd-hero-split-image img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 8px;
}

@media (max-width: 767px) {
    .gd-hero-split-content {
        flex-direction: column;
    }

    .gd-hero-split-text {
        text-align: center;
    }

    .gd-hero-split-ctas {
        justify-content: center;
    }
}
</style>

{{#get "pages" filter=filter}}
  {{#if pages}}
    <section class="gd-hero-split-section gh-outer">
      <div class="gh-inner">
        {{#foreach pages}}
          <div class="gd-hero-split-content">
            <div class="gd-hero-split-text">
              <h1 class="is-title">{{title}}</h1>
              {{#if custom_excerpt}}
                <p class="gd-hero-split-excerpt is-body">{{custom_excerpt}}</p>
              {{/if}}
              <div class="gd-hero-split-ctas gh-content is-body">
                {{content}}
              </div>
            </div>
            {{#if feature_image}}
            <div class="gd-hero-split-image">
              <img
                srcset="{{img_url feature_image size="s"}} 320w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 960w,
                        {{img_url feature_image size="xl"}} 1200w,
                        {{img_url feature_image size="xxl"}} 2000w"
                sizes="(max-width: 767px) 100vw, (max-width: 1200px) 50vw, 560px"
                src="{{img_url feature_image size="xl"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
              />
            </div>
            {{/if}}
          </div>
        {{/foreach}}
      </div>
    </section>
  {{/if}}
{{/get}}
