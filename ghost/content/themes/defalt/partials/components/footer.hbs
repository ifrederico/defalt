{{#if @site.members_enabled}}
    {{#unless @member}}
        <section class="gd-cta-bar gh-outer">
            <div class="gd-cta-bar-inner gh-inner">
                <h2 class="gd-cta-bar-title is-title">
                    {{#if @custom.signup_heading}}{{@custom.signup_heading}}{{else}}{{@site.title}}{{/if}}
                </h2>
                <p class="gd-cta-bar-subhead is-body">
                    {{#if @custom.signup_subheading}}{{@custom.signup_subheading}}{{else}}{{@site.description}}{{/if}}
                </p>
                {{> "email-subscription" email_field_id="cta-bar-email"}}
            </div>
        </section>
    {{/unless}}
{{/if}}

<footer class="gh-footer gh-outer">
    <div class="gh-footer-inner gh-inner">
        {{!-- Main footer grid --}}
        <div class="gh-footer-grid">
            {{!-- Social icons (left) --}}
            <div class="gh-footer-social">
                <a href="https://github.com/ifrederico/defalt" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                </a>
            </div>

            {{!-- Link columns (right) --}}
            <div class="gh-footer-columns">
                {{!-- Column 1: Tag pages with #footer-1, tag description becomes column title --}}
                {{#get "pages" filter="tag:hash-footer-1" limit="all"}}
                    {{#if pages}}
                        <div class="gh-footer-column">
                            <h4 class="gh-footer-column-title">
                                {{#get "tags" filter="slug:hash-footer-1" limit="1"}}{{#foreach tags visibility="all"}}{{#if description}}{{description}}{{else}}Links{{/if}}{{else}}Links{{/foreach}}{{/get}}
                            </h4>
                            <ul class="gh-footer-column-links">
                                {{#foreach pages}}
                                    <li><a href="{{url}}">{{title}}</a></li>
                                {{/foreach}}
                            </ul>
                        </div>
                    {{/if}}
                {{/get}}

                {{!-- Column 2: Tag pages with #footer-2, tag description becomes column title --}}
                {{#get "pages" filter="tag:hash-footer-2" limit="all"}}
                    {{#if pages}}
                        <div class="gh-footer-column">
                            <h4 class="gh-footer-column-title">
                                {{#get "tags" filter="slug:hash-footer-2" limit="1"}}{{#foreach tags visibility="all"}}{{#if description}}{{description}}{{else}}Resources{{/if}}{{else}}Resources{{/foreach}}{{/get}}
                            </h4>
                            <ul class="gh-footer-column-links">
                                {{#foreach pages}}
                                    <li><a href="{{url}}">{{title}}</a></li>
                                {{/foreach}}
                            </ul>
                        </div>
                    {{/if}}
                {{/get}}
            </div>
        </div>

        {{!-- Copyright bar --}}
        <div class="gh-footer-bar">
            <div class="gh-footer-copyright">
                &copy; {{date format="YYYY"}} {{@site.title}}. All rights reserved.
            </div>
        </div>
    </div>
</footer>
